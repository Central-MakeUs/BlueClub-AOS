    android:id="@+id/nav_graph"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.blueclub.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_workbook"
            app:destination="@id/workbookFragment" />
    </fragment>

    <fragment
        android:id="@+id/workbookFragment"
        android:name="org.blueclub.presentation.workbook.WorkbookFragment"
        android:label="WorkbookFragment"
        tools:layout="@layout/fragment_workbook" />

    <fragment
        android:id="@+id/mypageFragment"
        android:name="org.blueclub.presentation.mypage.MyPageFragment"
        android:label="MyPageFragment"
