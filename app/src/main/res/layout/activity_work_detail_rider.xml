<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="org.blueclub.presentation.type.DailyWorkType" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.blueclub.presentation.daily.rider.WorkDetailRiderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="@{viewModel.isSaveAvailable}"
                android:text="@string/save"
                android:textAppearance="@style/TextAppearance.Subtitle1"
                android:textColor="@{viewModel.isSaveAvailable ? @color/primary_normal :@color/gray_05}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_daily_work_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_app_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:text="@{@string/daily_work_date_format(viewModel.month, viewModel.day, viewModel.dow)}"
                    android:textAppearance="@style/TextAppearance.H7_Bold"
                    android:textColor="@color/gray_10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="12.12 화요일" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_work_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_info">

                    <ImageView
                        android:id="@+id/iv_smile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_smile"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_daily_work_type_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_daily_work_type_title" />

                    <TextView
                        android:id="@+id/tv_daily_work_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/daily_work_type"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_smile"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        layout="@layout/view_necessary_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_daily_work_type_title"
                        app:layout_constraintStart_toEndOf="@+id/tv_daily_work_type_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_daily_work_type_title" />

                    <TextView
                        android:id="@+id/tv_daily_work_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@{viewModel.workType.titleRes}"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@{context.getColor(viewModel.workType.detailTextColor)}"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_select_work_type"
                        app:layout_constraintEnd_toStartOf="@+id/iv_select_work_type"
                        app:layout_constraintTop_toTopOf="@+id/iv_select_work_type" />

                    <ImageView
                        android:id="@+id/iv_select_work_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_daily_work_type_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_daily_work_type_title" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_04"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_daily_work_type_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_work_type">

                    <ImageView
                        android:id="@+id/iv_money_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_money"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_delivery"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_delivery" />

                    <TextView
                        android:id="@+id/tv_amount_title_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/daily_delivery_count"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_money_delivery"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        layout="@layout/view_necessary_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_delivery"
                        app:layout_constraintStart_toEndOf="@+id/tv_amount_title_delivery"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_delivery" />

                    <ImageView
                        android:id="@+id/iv_amount_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:onClick="@{() -> viewModel.minusDeliveryCount()}"
                        android:src="@drawable/ic_minus_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_amount"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@{viewModel.deliveryCount.toString()}"
                        android:textAppearance="@style/TextAppearance.Subtitle1"
                        android:textColor="@color/gray_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_amount_plus"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <ImageView
                        android:id="@+id/iv_amount_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:onClick="@{() -> viewModel.plusDeliveryCount()}"
                        android:src="@drawable/ic_plus_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_04"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_amount_title_delivery" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_delivery_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_delivery">

                    <ImageView
                        android:id="@+id/iv_money_delivery_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_money"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_delivery_income"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_delivery_income" />

                    <TextView
                        android:id="@+id/tv_amount_title_delivery_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/daily_delivery_income"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_money_delivery_income"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        android:id="@+id/view_necessary_tag_delivery_income"
                        layout="@layout/view_necessary_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_delivery_income"
                        app:layout_constraintStart_toEndOf="@+id/tv_amount_title_delivery_income"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_delivery_income" />

                    <EditText
                        android:id="@+id/et_amount_delivery_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:gravity="top|right"
                        android:hint="@string/income_input"
                        android:inputType="number"
                        android:text="@={viewModel.deliveryIncome}"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColorHint="@color/gray_04"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view_necessary_tag_delivery_income"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_04"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_amount_title_delivery_income" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_delivery_income">

                    <ImageView
                        android:id="@+id/iv_money_promotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_money"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_promotion"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_promotion" />

                    <TextView
                        android:id="@+id/tv_amount_title_promotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/daily_delivery_promotion_count"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_money_promotion"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_promotion_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:onClick="@{() -> viewModel.minusPromotionCount()}"
                        android:src="@drawable/ic_minus_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_promotion"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_promotion"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@{viewModel.promotionCount.toString()}"
                        android:textAppearance="@style/TextAppearance.Subtitle1"
                        android:textColor="@color/gray_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_promotion_plus"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0" />

                    <ImageView
                        android:id="@+id/iv_promotion_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:onClick="@{() -> viewModel.plusPromotionCount()}"
                        android:src="@drawable/ic_plus_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_divider_promotion"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_04"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_amount_title_promotion" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_promotion_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_promotion">

                    <ImageView
                        android:id="@+id/iv_money_promotion_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_money"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_amount_title_promotion_income"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_amount_title_promotion_income" />

                    <TextView
                        android:id="@+id/tv_amount_title_promotion_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/daily_delivery_promotion_income"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_money_promotion_income"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_amount_promotion_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="20dp"
                        android:background="@null"
                        android:gravity="top|right"
                        android:hint="@string/income_input"
                        android:inputType="number"
                        android:text="@={viewModel.promotionIncome}"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColorHint="@color/gray_04"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_amount_title_promotion_income"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_04"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_amount_title_promotion_income" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_add_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/shape_border_radius_80"
                    android:backgroundTint="@color/coolgray_01"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="6dp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_promotion_income">

                    <ImageView
                        android:id="@+id/iv_plus_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/memo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_plus_memo"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_border_radius_80"
                    android:backgroundTint="@color/coolgray_01"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="6dp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toEndOf="@+id/layout_add_memo"
                    app:layout_constraintTop_toTopOf="@+id/layout_add_memo">

                    <ImageView
                        android:id="@+id/iv_plus_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/add_photo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_plus_photo"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_income_info_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/background_income_info_top"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_add_memo">

                    <TextView
                        android:id="@+id/tv_total_income_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/total_income"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_auto_calculation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/shape_border_radius_4"
                        android:backgroundTint="@color/primary_background"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="@string/auto_calculation"
                        android:textColor="@color/primary_normal"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_total_income_title"
                        app:layout_constraintStart_toEndOf="@+id/tv_total_income_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_total_income_title" />

                    <TextView
                        android:id="@+id/tv_total_income_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@{viewModel.income}"
                        android:textColor="@color/primary_normal"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_total_income_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_total_income_title" />

                    <TextView
                        android:id="@+id/tv_expenditure_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/expenditure_amount"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintStart_toStartOf="@+id/tv_total_income_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_total_income_title" />

                    <EditText
                        android:id="@+id/et_expenditure"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="@string/income_input"
                        android:inputType="number"
                        android:text="@={viewModel.spentAmount}"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColorHint="@color/gray_04"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_expenditure_amount_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_auto_calculation"
                        app:layout_constraintTop_toTopOf="@+id/tv_expenditure_amount_title" />


                    <TextView
                        android:id="@+id/tv_saving_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:text="@string/saved_amount"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColor="@color/coolgray_06"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_expenditure_amount_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_expenditure_amount_title" />

                    <EditText
                        android:id="@+id/et_saving"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="@string/income_input"
                        android:inputType="number"
                        android:text="@={viewModel.savingsAmount}"
                        android:textAppearance="@style/TextAppearance.Body1_Medium"
                        android:textColorHint="@color/gray_04"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_saving_amount_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_auto_calculation"
                        app:layout_constraintTop_toTopOf="@+id/tv_saving_amount_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/layout_income_info_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/background_income_info_bottom"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@{@string/goal_achieved_amount(viewModel.incomePercentage)}"
                    android:textAppearance="@style/TextAppearance.Body1_Medium"
                    android:textColor="@color/coolgray_06"
                    android:visibility="@{viewModel.workType.name != DailyWorkType.REST.name ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_income_info_top" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show"
                    style="@style/Widget.FullButton.Basic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:enabled="@{viewModel.isInputCompleted}"
                    android:paddingVertical="17dp"
                    android:text="@string/show_my_income"
                    android:textAppearance="@style/TextAppearance.Subtitle1"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_income_info_bottom"
                    tools:backgroundTint="@color/gray_04" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{viewModel.workType.name == DailyWorkType.REST.name}">

            <ImageView
                android:id="@+id/iv_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coin_smile_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_rest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/rest_title"
                android:textAppearance="@style/TextAppearance.H6_Bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_rest" />

            <TextView
                android:id="@+id/tv_rest_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/rest_description"
                android:textAppearance="@style/TextAppearance.Subtitle2"
                android:textColor="@color/gray_07"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_rest_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
