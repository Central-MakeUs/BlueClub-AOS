<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.blueclub.presentation.auth.setting.AuthSettingViewModel" />

        <import type="org.blueclub.presentation.type.JobSettingViewType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_choose_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="62dp"
            android:text="@string/auth_job_setting_title"
            android:textAppearance="@style/TextAppearance.H6_Bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_choose_job_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="@string/auth_job_setting_description"
            android:textAppearance="@style/TextAppearance.Body2_Medium"
            android:textColor="#7C7C7C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_job_title" />

        <TextView
            android:id="@+id/tv_job_type_golf"
            selected="@{viewModel.selectedJobType.get(JobSettingViewType.GOLF)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/selector_job_setting"
            android:onClick="@{() -> viewModel.setJobType(JobSettingViewType.GOLF)}"
            android:paddingVertical="17dp"
            android:text="@{JobSettingViewType.GOLF.titleRes}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subtitle1"
            android:textColor="@drawable/selector_job_setting_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_choose_job_description"
            tools:text="골프캐디" />

        <TextView
            android:id="@+id/tv_job_type_rider"
            selected="@{viewModel.selectedJobType.get(JobSettingViewType.RIDER)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_job_setting"
            android:onClick="@{() -> viewModel.setJobType(JobSettingViewType.RIDER)}"
            android:paddingVertical="17dp"
            android:text="@{JobSettingViewType.RIDER.titleRes}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subtitle1"
            android:textColor="@drawable/selector_job_setting_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_type_golf"
            tools:text="배달 라이더" />

        <TextView
            android:id="@+id/tv_job_type_delivery"
            selected="@{viewModel.selectedJobType.get(JobSettingViewType.DAY_LABOR)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_job_setting"
            android:onClick="@{() -> viewModel.setJobType(JobSettingViewType.DAY_LABOR)}"
            android:paddingVertical="17dp"
            android:text="@{JobSettingViewType.DAY_LABOR.titleRes}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subtitle1"
            android:textColor="@drawable/selector_job_setting_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_type_rider"
            tools:text="일용직 근로자" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
